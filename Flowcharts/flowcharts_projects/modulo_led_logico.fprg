                    <output expression="&quot;LED lampeggia velocemente (stato: irrigazione)&quot;" newline="True"/>
                </then>
                <else>
                    <if expression="sogliaMin">
                        <then>
                            <output expression="&quot;LED acceso fisso (stato: troppo secco)&quot;" newline="True"/>
                        </then>
                        <else>
                            <output expression="&quot;LED spento (stato: umidit&#224; normale)&quot;" newline="True"/>
                        </else>
                    </if>
                </else>
            </if>
        </body>
