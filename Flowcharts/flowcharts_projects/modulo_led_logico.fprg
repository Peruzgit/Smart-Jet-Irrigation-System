    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="irrigazioneInCorso" type="Integer" array="False" size=""/>
            <declare name="media" type="Integer" array="False" size=""/>
            <declare name="sogliaMin" type="Integer" array="False" size=""/>
            <assign variable="sogliaMin" expression="300"/>
            <output expression="&quot;Inserisci valore umidit&#224; media (0-1023):&quot;" newline="True"/>
            <input variable="media"/>
            <output expression="&quot;Irrigazione in corso? (1=si, 0=no):&quot;" newline="True"/>
